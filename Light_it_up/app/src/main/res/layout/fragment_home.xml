<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.light_it_up.ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="출발점 : " />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteAddressStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionHint="검색어를 입력하세요."
            android:completionThreshold="1"
            android:text=""
            android:textColorHint="#555555" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="도착점 :" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteAddressEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionHint="검색어를 입력하세요."
            android:completionThreshold="1"
            android:text=""
            android:textColorHint="#555555" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_alert"
        android:layout_marginBottom="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sub2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_direction"
        android:layout_marginBottom="70dp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:id="@+id/last"
        android:layout_below="@+id/layoutMap"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_findRoad"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:background="#333E47"
            android:text="길찾기"
            android:textColor="#FF9800"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_toEndOf="@+id/btn_findRoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="GPS" />


    </RelativeLayout>

</LinearLayout>